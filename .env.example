# ============================================================
# IBKR TWS Trading Bot - Environment Configuration
# ============================================================
# Copy this file to .env and configure your settings
# DO NOT commit .env to version control!!! (please D:)

# ============================================================
# IBKR CONNECTION SETTINGS
# ============================================================

# IBKR Host (usually localhost for testing)
IBKR_HOST=127.0.0.1

# IBKR Port
# paper trading: 7497 (TWS) or 4002 (IB Gateway)
# live trading: 7496 (TWS) or 4001 (IB Gateway)
IBKR_PORT=7497

# client ID (must be unique per connection)
IBKR_CLIENT_ID=1

# your IBKR Account ID (optional, will be auto-detected)
IBKR_ACCOUNT_ID=

# use delayed market data (FREE - 15-20 min delay)
# set to false only if you have paid market data subscriptions
IBKR_USE_DELAYED_DATA=true

# ============================================================
# MARKET DATA PROVIDERS
# ============================================================

# Primary market data provider: ibkr, polygon, alphavantage, yahoo
# IBKR:           -> best for trading, supports delayed data for free
# Polygon:        -> great for testing, free tier available
# Alpha Vantage:  -> good alternative, free tier available
# Yahoo:          -> completely free, no API key needed
MARKET_DATA_PROVIDER=yahoo

# fallback providers (comma-separated, in order of preference; otherwise it won't recognize)
MARKET_DATA_FALLBACK=yahoo,ibkr

# Polygon.io API Key (get free at https://polygon.io)
# free tier -> 5 API calls/minute
POLYGON_API_KEY=

# Alpha Vantage API Key (get free at https://www.alphavantage.co)
# free tier -> 5 API calls/minute, 500/day
ALPHAVANTAGE_API_KEY=

# ============================================================
# TRADING CONFIGURATION
# ============================================================

# enable actual trading (SAFETY FEATURE - must be explicitly enabled)
ENABLE_TRADING=false

# use paper trading account (recommended for dev)
PAPER_TRADING=true

# maximum position size (USD)
MAX_POSITION_SIZE=10000.0

# maximum number of concurrent positions
MAX_POSITIONS=5

# maximum daily loss limit (USD)
MAX_DAILY_LOSS=500.0

# maximum single order value (USD)
MAX_ORDER_VALUE=5000.0

# default order type: LMT (limit), MKT (market), STP (stop), etc.
DEFAULT_ORDER_TYPE=LMT

# ============================================================
# LOGGING CONFIGURATION
# ============================================================

# log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# dir for log files
LOG_DIR=logs

# enable file logging
LOG_TO_FILE=true

# enable console logging
LOG_TO_CONSOLE=true

